extends layout

block content
  h1 Welcome to my color changer
  form(method="POST" action="/")
    label(for="picker") Background
    br
    input(type="color" name="colorPicker" id="picker" value=`${color}`)
    br
    label(for="picker") Text
    br
    input(type="color" name="textPicker" id="text-color" value=`${textColor}`)
    br
    label(for="picker")
      button(type="submit") Submit
  form(method="POST" action="/random")
    button(type="submit") Random

